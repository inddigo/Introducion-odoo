<odoo>
    <data noupdate="1">
        <record id="rule_producto_unidad_negocio" model="ir.rule">
            <field name="name">Productos por Unidad de Negocio</field>
            <field name="model_id" ref="model_modulo_introduccion_producto"/>
            <field name="domain_force">[('unidad_id', 'in', user.unidad_ids.ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="rule_producto_admin" model="ir.rule">
            <field name="name">Administrador ve todos los productos</field>
            <field name="model_id" ref="model_modulo_introduccion_producto"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>

        <record id="rule_parte_unidad_negocio" model="ir.rule">
            <field name="name">Partes por Unidad de Negocio</field>
            <field name="model_id" ref="model_modulo_introduccion_parte"/>
            <field name="domain_force">[('producto_id.unidad_id', 'in', user.unidad_ids.ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="rule_parte_admin" model="ir.rule">
            <field name="name">Administrador ve todas las partes</field>
            <field name="model_id" ref="model_modulo_introduccion_parte"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>
    </data>
</odoo>