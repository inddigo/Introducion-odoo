<odoo>
    <data noupdate="1">
        <record id="rule_producto_usuario" model="ir.rule">
            <field name="name">Productos propios solamente</field>
            <field name="model_id" ref="model_modulo_introduccion_producto"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="rule_producto_admin" model="ir.rule">
            <field name="name">Administrador ve todos los productos</field>
            <field name="model_id" ref="model_modulo_introduccion_producto"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>

        <record id="rule_parte_usuario" model="ir.rule">
            <field name="name">Partes propias solamente</field>
            <field name="model_id" ref="model_modulo_introduccion_parte"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="rule_parte_admin" model="ir.rule">
            <field name="name">Administrador ve todas las partes</field>
            <field name="model_id" ref="model_modulo_introduccion_parte"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>
    </data>
</odoo>