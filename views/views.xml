
<odoo>
    <record model="ir.ui.view" id="view_producto_tree">
        <field name="name">producto.tree</field>
        <field name="model">modulo_introduccion.producto</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="codigo"/>
                <field name="tipo"/>
            </list>
        </field>
    </record>

    <record model="ir.ui.view" id="view_producto_kanban">
        <field name="name">producto.kanban</field>
        <field name="model">modulo_introduccion.producto</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div>Código: <field name="codigo"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.ui.view" id="view_producto_form">
        <field name="name">producto.form</field>
        <field name="model">modulo_introduccion.producto</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="codigo"/>
                        <field name="tipo"/>
                        <field name="origen"/>
                    </group>
                    <notebook>
                        <page string="Partes">
                            <field name="parte_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_productos">
        <field name="name">Productos Pasantía</field>
        <field name="res_model">modulo_introduccion.producto</field>
        <field name="view_mode">list,kanban,form</field>
    </record>

    <menuitem name="Introducción Odoo" id="menu_root"/>
    <menuitem name="Productos" id="menu_productos" parent="menu_root" action="action_productos"/>

    <record model="ir.ui.view" id="view_parte_tree">
        <field name="name">parte.tree</field>
        <field name="model">modulo_introduccion.parte</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="producto_id"/>
            </list>
        </field>
    </record>

    <record model="ir.ui.view" id="view_parte_kanban">
        <field name="name">parte.kanban</field>
        <field name="model">modulo_introduccion.parte</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div>Relacionado con: <field name="producto_id"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.ui.view" id="view_parte_form">
        <field name="name">parte.form</field>
        <field name="model">modulo_introduccion.parte</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="producto_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_partes">
        <field name="name">Partes de Productos</field>
        <field name="res_model">modulo_introduccion.parte</field>
        <field name="view_mode">list,kanban,form</field>
    </record>

    <menuitem name="Partes" id="menu_partes" parent="menu_root" action="action_partes" sequence="20"/>  
</odoo>