<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_producto_tree" model="ir.ui.view">
        <field name="name">modulo_introduccion.producto.tree</field>
        <field name="model">modulo_introduccion.producto</field>
        <field name="arch" type="xml">
            <list string="Productos">
                <field name="name"/>
                <field name="codigo"/>
                <field name="tipo"/>
                <field name="origen"/>
                <field name="unidad_ids" widget="many2many_tags" string="Unidades de Negocio"/>
            </list>
        </field>
    </record>

    <record id="view_producto_form" model="ir.ui.view">
        <field name="name">modulo_introduccion.producto.form</field>
        <field name="model">modulo_introduccion.producto</field>
        <field name="arch" type="xml">
            <form string="Producto">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="codigo"/>
                        </group>
                        <group>
                            <field name="tipo"/>
                            <field name="origen"/>
                            <field name="unidad_ids" widget="many2many_tags" string="Unidades de Negocio" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Partes Asociadas">
                            <field name="parte_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_producto_kanban" model="ir.ui.view">
        <field name="name">modulo_introduccion.producto.kanban</field>
        <field name="model">modulo_introduccion.producto</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div>Código: <field name="codigo"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_productos" model="ir.actions.act_window">
        <field name="name">Productos</field>
        <field name="res_model">modulo_introduccion.producto</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer producto aquí.
            </p>
        </field>
    </record>
</odoo>