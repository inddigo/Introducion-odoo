<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_producto_list" model="ir.ui.view">
        <field name="name">modulo_introduccion.producto.list</field>
        <field name="model">modulo_introduccion.producto</field>
        <field name="arch" type="xml">
            <list>
                <field name="image" widget="image" options="{'size': [40, 40]}" string="Foto"/>
                <field name="name"/>
                <field name="codigo"/>
                <field name="unidad_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="view_producto_form" model="ir.ui.view">
        <field name="name">modulo_introduccion.producto.form</field>
        <field name="model">modulo_introduccion.producto</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="codigo"/>
                        </group>
                        <group>
                            <field name="tipo"/>
                            <field name="origen"/>
                            <field name="unidad_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Partes Asociadas">
                            <field name="parte_ids">
                                <list editable="bottom">
                                    <field name="image" widget="image" options="{'size': [50, 50]}"/>
                                    <field name="name"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_productos" model="ir.actions.act_window">
        <field name="name">Productos</field>
        <field name="res_model">modulo_introduccion.producto</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
</odoo>